{
    "metadata": [
        {
            "src": [
                {
                    "src": "../Assets/",
                    "files": [
                        "**/*.cs"
                    ]
                }
            ],
            "dest": "api",
            "allowCompilationErrors": true
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "dest": "_site",
        "template": [
            "default",
            "unity"
        ],
        "globalMetadata": {
            "_appName": "Docfx Demo",
            "_appTitle": "Docfx Demo",
            "_enableSearch": true,
            "pdf": true
        }
    }
}